<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".NuevoProductoFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="0dp"
                android:layout_height="49dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2"
                android:hint="@string/txt_codigo"
                android:textStyle="bold"
                android:textColor="@android:color/black" app:layout_constraintHorizontal_bias="0.493"
                android:id="@+id/editText1"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText2"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp"
                android:hint="@string/txt_nombre" android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>